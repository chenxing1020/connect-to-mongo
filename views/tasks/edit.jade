h1 Edit task view

form(method='post',action='/tasks/'+task.id+'?_method=put')
    fieldset
        legend Editing task
        div.clearfix
            label Task
            div.inputtask
                input(name='task[task]',class='xlarge',value="#{task.task}")
            label Details
            div.inputdetail
                input(name='task[detail]',class='xlarge',value="#{task.detail}")
        div.actions
            input(type='submit',value='Save',class='btn primary')
            button(type='reset',class='btn') Cancel